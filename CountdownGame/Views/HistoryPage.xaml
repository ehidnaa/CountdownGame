<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CountdownGame.HistoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="History">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Button Text="Refresh" Clicked="OnRefreshClicked" />
        <CollectionView x:Name="HistoryList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,6" CornerRadius="8">
                        <VerticalStackLayout>
                            <Label Text="{Binding Timestamp}" FontSize="12" Opacity="0.7"/>
                            <Label Text="{Binding Player1Name}" />
                            <Label Text="{Binding Player2Name}" />
                            <Label Text="{Binding Player1Score}" />
                            <Label Text="{Binding Player2Score}" />
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Player1Name}" />
                                        <Span Text=": " />
                                        <Span Text="{Binding Player1Score}" />
                                        <Span Text="  vs  " />
                                        <Span Text="{Binding Player2Name}" />
                                        <Span Text=": " />
                                        <Span Text="{Binding Player2Score}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>