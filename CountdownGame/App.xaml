<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountdownGame.App">
    <Application.Resources>
        <ResourceDictionary>

            <!-- one brush key for dynamic background -->
            <SolidColorBrush x:Key="AppBackground" Color="White" />

            <!-- apply this background to ALL ContentPage by default -->
            <Style TargetType="ContentPage">
                <Setter Property="Background" Value="{DynamicResource AppBackground}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>