<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountdownGame.MainPage"
             Title="Home"
             Opacity="0"
             Background="{DynamicResource AppBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Welcome to Countdown Game!"
                   FontSize="28"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   FontAttributes="Bold"/>

            <Label Text="Challenge yourself and keep track of your results."
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <Button Text="Start Game"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnStartGameClicked"/>

            <Button Text="Go to Settings"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnGoToSettingsClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>