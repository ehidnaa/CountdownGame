<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="CountdownGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CountdownGame">

    <TabBar>
        <ShellContent Route="home"    Title="Home"    ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Route="game"    Title="Game"    ContentTemplate="{DataTemplate local:GamePage}" />
        <ShellContent Route="history" Title="History" ContentTemplate="{DataTemplate local:HistoryPage}" />
        <ShellContent Route="settings" Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </TabBar>

</Shell>
