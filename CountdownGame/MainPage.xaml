<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CountdownGame.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Label Text="Countdown Game" FontSize="28" HorizontalOptions="Center" />

        <Entry x:Name="Player1Entry" Placeholder="Player 1 name" />
        <Entry x:Name="Player2Entry" Placeholder="Player 2 name" />

        <Button Text="Start Game" Clicked="OnStartGameClicked" />

        <Label Text="Tip: you can change names anytime in Settings"
               FontSize="12" Opacity="0.6" />

    </VerticalStackLayout>
</ContentPage>